<div class="container form">
  <h2>Inscription</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name,
                  label: "Nom complet",
                  autofocus: true,
                  input_html: { autocomplete: "name"} %>

      <%= f.input :username,
                  label: "Surnom",
                  placeholder: "nom d'utilisateur",
                  autofocus: true,
                  required: true,
                  input_html: { autocomplete: "username"} %>
      <%= f.input :email,
                  label: "E-mail",
                  placeholder: "votre.adresse@email.fr",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  label: "Mot de passe",
                  required: true,
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmation",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :photo, as: :file %>
      <%= f.input :city,
                  label: "Ville",
                  autofocus: true,
                  input_html: { autocomplete: "city"} %>
      <%= f.input :birthdate,
                  as: :date,
                  html5: true,
                  label: "Date de naissance",
                  autofocus: true,
                  input_html: { autocomplete: "birthdate"} %>

    </div>

    <div class="form-actions">
      <%= f.button :submit, "Créer un compte", class: "btn-blue" %>
    </div>
  <%= render "devise/shared/links" %>
  <% end %>
</div>
